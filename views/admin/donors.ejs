<%-include("../common/header")%>

    <link rel="stylesheet" href="/admin/home.css">

    <title>Donors : Blood Bank</title>
</head>
<body>
    <%-include("navbar")%>

    <h1>Manage Donors</h1>

    <section class="main">
        <%- include("sidebar") %>
        <div class="main-item">
            <table class="main-table">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Aadhar No.</th>
                        <th>Name</th>
                        <th>Gender</th>
                        <th>e-mail</th>
                        <th>Mobile</th>
                        <th>DOB</th>
                        <th>Father's Name</th>
                        <th>Address</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    <% donors.forEach((donor,index)=>{ %>
                        <tr>
                            <td><%= index+1 %></td>
                            <td><%= donor.aadhar %></td>
                            <td><%= donor.name %></td>
                            <td><%= donor.gender %></td>
                            <td><%= donor.email %></td>
                            <td><%= donor.mobile %></td>
                            <td><%= donor.dob.getDate()+"/"+(donor.dob.getMonth()+1)+"/"+donor.dob.getFullYear() %></td>
                            <td><%= donor.fname %></td>
                            <td><%= donor.address %></td>
                            <td><a href=<%= "/admin/"+adminId+"/donors/"+donor._id %>>Manage >>></a></td>
                        </tr>
                    <%}) %>
                </tbody>
            </table>
            <a href= <%= "/admin/"+adminId+"/donors/register" %> ><button>+ New Donor</button></a>
        </div>
    </section>

    <%-include("../common/footer")%>
</body>
</html>